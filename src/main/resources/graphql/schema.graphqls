
type Mutation{
    createBook(book:BookInput):Book
    updateBook(book:UpdateBook):Book
}


type Query{
    allBooks:[Book]
    getBook(bookId:Int):Book
}


type Book{

    id:ID!
    title:String
    description:String
    author:String
    price:Float
    pages:Int
}


input BookInput{
    title:String
    description:String
    author:String
    price:Float
    pages:Int
}

input UpdateBook{
    title:String
    description:String
    author:String
    price:Float
    pages:Int
}